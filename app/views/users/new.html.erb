 <% form_for @user, :user, :url=>{:action=> "create"} do |f|%>

                        <table align="center" style="background-color:White;height:100px ; width:500px; outline:1px solid black " >
                                <tr>
                                        <td style="background-color:red; color:white "><%= flash[:error] %> </td>
                                </tr>

                                </tr>
                                <tr>
                                        <td> Login: <%=f.text_field :login%>   </td>
                                </tr>
                                <tr>
                                        <td>  Email: <%=f.text_field :email%> </td>
                                </tr>

                                <tr>
                                        <td>  Password:<%= f.password_field :password %>   </td>
                                </tr>
                                <tr>
                                        <td> <%= label_tag 'password_confirmation', 'Confirm Password' %><br/>
                                                <%= f.password_field :password_confirmation %>
                                        </td>
                                </tr>
                        </table>
                        <div align="center">
                                <%=f.submit "Signup" %>
                        </div>
                <%end%>

